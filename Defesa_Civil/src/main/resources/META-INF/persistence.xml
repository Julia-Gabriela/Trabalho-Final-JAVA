<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="meuPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.model.Endereco</class> <!-- Altere para o caminho completo da classe Endereco -->
        <properties>
            <!-- Configuração do banco de dados MySQL -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/defesacivil?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <!-- Configuração do driver JDBC -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Configurações do Hibernate (JPA) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Habilitar logs de SQL para facilitar o debug -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
